# Logging Configuration for Company Profile Agent
# Copy these settings to your .env file

# LOG_LEVEL: Controls log verbosity
# 0 = CRITICAL (only critical errors and important status updates)
# 1 = ERROR (errors and warnings)
# 2 = INFO (basic information)
# 3 = DEBUG (detailed debugging information)
# 4 = VERBOSE (very detailed debugging - current default behavior)
LOG_LEVEL=0

# LOG_EMOJIS: Enable/disable emojis in log messages
# true = Show emojis (default)
# false = Plain text only
LOG_EMOJIS=true
